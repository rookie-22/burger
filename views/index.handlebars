<section class="content">

  <h1 class="pageHead">Eat Da Burger!</h1>
  <div class="burgerListsSection">

    <ul class="burgerList">
      {{#each burgers}}
      {{#unless devoured}}
      <div class="burgerItem">
        <span>{{burger_name}}</span>
      </div>
      <br>
      {{/unless}}
      {{/each}}
    </ul>

    <ul class="burgerList">
      {{#each burgers}}
      {{#unless devoured}}
      <button class="devourButton" value = {{id}}>
        Devour!
      </button>
      <br>
      {{/unless}}
      {{/each}}
    </ul>

    <ul class="burgerList">
      {{#each burgers}}
      {{#if devoured}}
      <div class="burgerItem devoured">
        <span>{{burger_name}}</span>
      </div>
      <br>
      {{/if}}
      {{/each}}
    </ul>
  </div>


  <h2>Add a Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="ca">Burger Name:</label>
      <input type="text" id="ca" name="name">
    </div>



    <button type="submit">Add Burger</button>
  </form>
</section>